# Environment variables for MCP Inspector tests

# Docker version to test
DOCKER_VERSION=stable

# Schema Registry configuration (single registry mode)
SCHEMA_REGISTRY_URL=http://localhost:8081
SCHEMA_REGISTRY_USER=
SCHEMA_REGISTRY_PASSWORD=
READONLY=false

# Multi-registry configuration
# Development
SCHEMA_REGISTRY_NAME_1=development
SCHEMA_REGISTRY_URL_1=http://localhost:8091
SCHEMA_REGISTRY_USER_1=
SCHEMA_REGISTRY_PASSWORD_1=
READONLY_1=false

# Staging
SCHEMA_REGISTRY_NAME_2=staging
SCHEMA_REGISTRY_URL_2=http://localhost:8092
SCHEMA_REGISTRY_USER_2=
SCHEMA_REGISTRY_PASSWORD_2=
READONLY_2=false

# Production
SCHEMA_REGISTRY_NAME_3=production
SCHEMA_REGISTRY_URL_3=http://localhost:8093
SCHEMA_REGISTRY_USER_3=
SCHEMA_REGISTRY_PASSWORD_3=
READONLY_3=true

# Test execution options
SKIP_ENV_SETUP=false
CLEANUP_AFTER=true

# OAuth configuration (if enabled)
ENABLE_AUTH=false
AUTH_ISSUER_URL=https://auth.example.com
AUTH_VALID_SCOPES=read,write,admin
AUTH_DEFAULT_SCOPES=read
AUTH_REQUIRED_SCOPES=read
