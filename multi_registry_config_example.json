{
  "mcpServers": {
    "kafka-schema-registry-multi": {
      "command": "python",
      "args": ["kafka_schema_registry_multi_mcp.py"],
      "env": {
        "_comment": "Multi-registry configuration in JSON format",
        "REGISTRIES_CONFIG": "{\"dev\":{\"url\":\"http://dev-schema-registry:8081\",\"user\":\"dev-user\",\"password\":\"dev-pass\",\"description\":\"Development environment\"},\"staging\":{\"url\":\"http://staging-schema-registry:8081\",\"user\":\"staging-user\",\"password\":\"staging-pass\",\"description\":\"Staging environment\"},\"production\":{\"url\":\"http://prod-schema-registry:8081\",\"user\":\"prod-user\",\"password\":\"prod-pass\",\"description\":\"Production environment\"}}",
        "READONLY": "false"
      }
    }
  }
} 